# my makefile                                    коментар


CC=clang                                         задавене на стойности на промеливи
CFLAGS=-lm -pthread
OBJS = main.o sum.o mult.o div.o sub.o

.PHONY: all                                     винаги да може да се изпълни all дори да има файл с име аll

all: program                                    при извикване на all се изпълнява program

program: $(OBJS)                               
	$(CC) $^ -o $@ $(CFLAGS)               компилират се всички файлове от OBJS с gcc като на gcc се подават аргументи $(CFLAGS)
                                               а изходния файл ще се казва program

%.o: %.c                                       подава се има на файл който завършва на .о
	$(CC) -c $< -o $@                      компилира се файл с име като на подадения ,но да завършва на .с
                                               изходния файл ще се казва като подаденото име и ще бъде обектен код

.PHONY: clean                                 винаги да можем да извикаме clean дори да има създаден файл с това име
clean:
	rm -rf *.o program                  изтриват се всички файлове които завършват на .о 
                                             и се изтрива program

